@page "/dashboard"
@inject AuthStateService AuthState
@inject NavigationManager Navigation

<PageTitle>Dashboard - NewLook</PageTitle>

<div class="container mt-4">
    @if (isAuthenticated && currentUser != null)
    {
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">Welcome back, @currentUser.Username!</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="text-primary">0</h3>
                        <p class="text-muted mb-0">My Inventories</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="text-success">0</h3>
                        <p class="text-muted mb-0">Total Items</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="text-info">0</h3>
                        <p class="text-muted mb-0">Shared With Me</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Recent Inventories</h5>
                        <button class="btn btn-primary btn-sm">+ New Inventory</button>
                    </div>
                    <div class="card-body">
                        <p class="text-muted text-center py-5">
                            No inventories yet. Click "New Inventory" to get started!
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center mt-5">
            <p>Loading...</p>
        </div>
    }
</div>

@code {
    private bool isAuthenticated = false;
    private UserDto? currentUser = null;

    protected override async Task OnInitializedAsync()
    {
        isAuthenticated = await AuthState.IsAuthenticatedAsync();
        if (!isAuthenticated)
        {
            Navigation.NavigateTo("/login");
            return;
        }

        currentUser = await AuthState.GetCurrentUserAsync();
    }
}