@page "/register"
@using Microsoft.AspNetCore.Components.Authorization
@using NewLook.Services
@using NewLook.Models.DTOs.Auth
@inject ApiService Api
@inject CustomAuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject IConfiguration Configuration

<PageTitle>Register - NewLook</PageTitle>

<div class="login-container">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-12 col-md-10 col-lg-8 col-xl-6">
                <div class="card login-card shadow-lg border-0">
                    <div class="row g-0">
                        <!-- Left Side - Branding -->
                        <div class="col-md-6 d-none d-md-block bg-success text-white p-5 rounded-start position-relative overflow-hidden">
                            <div class="d-flex flex-column h-100 justify-content-between position-relative z-index-1">
                                <div>
                                    <h1 class="display-4 fw-bold mb-3">NewLook</h1>
                                    <p class="lead mb-4">Join us and start managing your inventories</p>
                                </div>
                                <div>
                                    <div class="mb-3">
                                        <i class="bi bi-shield-check me-2"></i>
                                        <span>Secure & Private</span>
                                    </div>
                                    <div class="mb-3">
                                        <i class="bi bi-people me-2"></i>
                                        <span>Collaborate with team</span>
                                    </div>
                                    <div>
                                        <i class="bi bi-lightning-charge me-2"></i>
                                        <span>Fast & Easy to use</span>
                                    </div>
                                </div>
                            </div>
                            <div class="position-absolute top-0 start-0 w-100 h-100 opacity-10">
                                <div class="bg-pattern"></div>
                            </div>
                        </div>

                        <!-- Right Side - Registration Form -->
                        <div class="col-md-6">
                            <div class="card-body p-4 p-lg-5">
                                <h2 class="fw-bold mb-4">Create Account</h2>

                                @if (!string.IsNullOrEmpty(errorMessage))
                                {
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                        @errorMessage
                                        <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(successMessage))
                                {
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        <i class="bi bi-check-circle-fill me-2"></i>
                                        @successMessage
                                        <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
                                    </div>
                                }

                                <!-- Social Registration Buttons -->
                                <div class="d-grid gap-2 mb-4">
                                    <button type="button" class="btn btn-outline-dark btn-lg d-flex align-items-center justify-content-center" @onclick="HandleGoogleRegister" disabled="@isLoading">
                                        <svg class="me-2" width="20" height="20" viewBox="0 0 24 24">
                                            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                                            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                                            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                                            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                                        </svg>
                                        Sign up with Google
                                    </button>

                                    <button type="button" class="btn btn-dark btn-lg d-flex align-items-center justify-content-center" @onclick="HandleGitHubRegister" disabled="@isLoading">
                                        <svg class="me-2" width="20" height="20" viewBox="0 0 24 24" fill="white">
                                            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                                        </svg>
                                        Sign up with GitHub
                                    </button>
                                </div>

                                <div class="position-relative mb-4">
                                    <hr class="my-4">
                                    <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted">or</span>
                                </div>

                                <!-- Email/Password Registration Form -->
                                <EditForm Model="@registerModel" OnValidSubmit="HandleRegister">
                                    <DataAnnotationsValidator />

                                    <div class="mb-3">
                                        <label for="username" class="form-label">Username</label>
                                        <InputText id="username" class="form-control form-control-lg" @bind-Value="registerModel.Username" placeholder="Choose a username" />
                                        <ValidationMessage For="@(() => registerModel.Username)" class="text-danger small" />
                                    </div>

                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <InputText id="email" type="email" class="form-control form-control-lg" @bind-Value="registerModel.Email" placeholder="Enter your email" />
                                        <ValidationMessage For="@(() => registerModel.Email)" class="text-danger small" />
                                    </div>

                                    <div class="mb-3">
                                        <label for="password" class="form-label">Password</label>
                                        <InputText id="password" type="password" class="form-control form-control-lg" @bind-Value="registerModel.Password" placeholder="Create a password" />
                                        <ValidationMessage For="@(() => registerModel.Password)" class="text-danger small" />
                                        <div class="form-text small">Password must be at least 6 characters</div>
                                    </div>

                                    <div class="mb-4">
                                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                                        <InputText id="confirmPassword" type="password" class="form-control form-control-lg" @bind-Value="registerModel.ConfirmPassword" placeholder="Confirm your password" />
                                        <ValidationMessage For="@(() => registerModel.ConfirmPassword)" class="text-danger small" />
                                    </div>

                                    <div class="d-grid gap-2 mb-4">
                                        <button type="submit" class="btn btn-success btn-lg" disabled="@isLoading">
                                            @if (isLoading)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                                <span>Creating Account...</span>
                                            }
                                            else
                                            {
                                                <span>Create Account</span>
                                            }
                                        </button>
                                    </div>
                                </EditForm>

                                <div class="text-center">
                                    <p class="mb-0 text-muted small">
                                        Already have an account?
                                        <a href="/login" class="text-success text-decoration-none fw-bold">Sign in</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .login-container {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        min-height: 100vh;
    }

    .login-card {
        border-radius: 1rem;
        overflow: hidden;
    }

    .bg-pattern {
        background-image:
            repeating-linear-gradient(45deg, transparent, transparent 35px, rgba(255,255,255,.1) 35px, rgba(255,255,255,.1) 70px);
    }

    .btn-outline-dark:hover {
        background-color: #f8f9fa;
        border-color: #dee2e6;
        color: #212529;
    }

    .form-control:focus {
        border-color: #11998e;
        box-shadow: 0 0 0 0.2rem rgba(17, 153, 142, 0.25);
    }

    .btn-success {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        border: none;
    }

    .btn-success:hover {
        background: linear-gradient(135deg, #0e8577 0%, #2fd669 100%);
    }

    @@media (max-width: 768px) {
        .login-container {
            background: white;
        }
    }
</style>

@code {
    private RegisterRequestDto registerModel = new();
    private string errorMessage = "";
    private string successMessage = "";
    private bool isLoading = false;
    private DotNetObjectReference<Register>? dotNetRef;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            dotNetRef = DotNetObjectReference.Create(this);

            // Check if already authenticated
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (authState.User.Identity?.IsAuthenticated ?? false)
            {
                Navigation.NavigateTo("/dashboard", true);
            }
        }
    }

    private async Task HandleRegister()
    {
        errorMessage = "";
        successMessage = "";
        isLoading = true;

        try
        {
            // Validate passwords match
            if (registerModel.Password != registerModel.ConfirmPassword)
            {
                errorMessage = "Passwords do not match";
                isLoading = false;
                return;
            }

            var (success, message, data) = await Api.RegisterAsync(registerModel);

            if (success && data != null)
            {
                var userSession = new UserSession
                {
                    Id = data.User.Id,
                    Username = data.User.Username,
                    Email = data.User.Email,
                    Token = data.Token
                };

                await AuthStateProvider.UpdateAuthenticationState(userSession);
                successMessage = "Account created successfully! Redirecting...";

                await Task.Delay(1000);
                Navigation.NavigateTo("/dashboard", true);
            }
            else
            {
                errorMessage = message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleGoogleRegister()
    {
        if (isLoading) return;

        errorMessage = "";
        isLoading = true;

        try
        {
            var clientId = Configuration["Authentication:Google:ClientID"];
            var baseUrl = Environment.GetEnvironmentVariable("APP_BASE_URL")
                ?? Configuration["BaseUrl"]
                ?? "http://localhost:5070";
            var redirectUri = baseUrl + "/oauth-callback";
            var encodedRedirect = redirectUri.Replace(":", "%3A").Replace("/", "%2F");

            var authUrl = "https://accounts.google.com/o/oauth2/v2/auth?client_id=" + clientId +
                "&redirect_uri=" + encodedRedirect +
                "&response_type=code&scope=openid%20email%20profile&access_type=offline&prompt=consent";

            await JS.InvokeVoidAsync("oauthPopup.open", authUrl, "Google Sign Up", 500, 600, dotNetRef);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
            isLoading = false;
        }
    }

    private async Task HandleGitHubRegister()
    {
        if (isLoading) return;

        errorMessage = "";
        isLoading = true;

        try
        {
            var clientId = Configuration["Authentication:Github:ClientID"];
            var baseUrl = Environment.GetEnvironmentVariable("APP_BASE_URL")
                ?? Configuration["BaseUrl"]
                ?? "http://localhost:5070";
            var redirectUri = baseUrl + "/oauth-callback";
            var encodedRedirect = redirectUri.Replace(":", "%3A").Replace("/", "%2F");

            var authUrl = "https://github.com/login/oauth/authorize?client_id=" + clientId +
                "&redirect_uri=" + encodedRedirect +
                "&scope=user:email&response_type=code";

            await JS.InvokeVoidAsync("oauthPopup.open", authUrl, "GitHub Sign Up", 500, 600, dotNetRef);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
            isLoading = false;
        }
    }

    [JSInvokable]
    public async Task ReceiveOAuthCode(string code)
    {
        try
        {
            // Try Google first, then GitHub
            var (success, message, accessToken) = await Api.ExchangeGoogleCodeAsync(code);

            if (!success)
            {
                (success, message, accessToken) = await Api.ExchangeGitHubCodeAsync(code);
            }

            if (success && !string.IsNullOrEmpty(accessToken))
            {
                var (authSuccess, authMessage, authData) = await Api.AuthenticateWithGoogleAsync(accessToken);

                if (!authSuccess)
                {
                    (authSuccess, authMessage, authData) = await Api.AuthenticateWithGitHubAsync(accessToken);
                }

                if (authSuccess && authData != null)
                {
                    var userSession = new UserSession
                    {
                        Id = authData.User.Id,
                        Username = authData.User.Username,
                        Email = authData.User.Email,
                        Token = authData.Token
                    };

                    await AuthStateProvider.UpdateAuthenticationState(userSession);
                    successMessage = "Account created successfully! Redirecting...";

                    await Task.Delay(500);
                    Navigation.NavigateTo("/dashboard", true);
                }
                else
                {
                    errorMessage = authMessage;
                }
            }
            else
            {
                errorMessage = message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"OAuth error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        dotNetRef?.Dispose();
    }
}
