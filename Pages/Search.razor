@page "/search"
@using NewLook.Services.Interfaces
@using NewLook.Models.DTOs.Inventory
@inject IInventoryService InventoryService
@inject NavigationManager Navigation

<PageTitle>Search Results - NewLook</PageTitle>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8 mx-auto">
            <h2>Search Results</h2>
            @if (!string.IsNullOrEmpty(searchQuery))
            {
                <p class="text-muted">Showing results for: <strong>"@searchQuery"</strong></p>
            }
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Searching...</p>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8 mx-auto">
                @if (!inventories.Any())
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        No inventories found matching your search.
                    </div>
                }
                else
                {
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <h5 class="mb-0">Found @inventories.Count inventory(ies)</h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>Image</th>
                                            <th>Title</th>
                                            <th>Category</th>
                                            <th>Creator</th>
                                            <th>Items</th>
                                            <th>Created</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var inventory in inventories)
                                        {
                                            <tr class="clickable-row" @onclick="() => NavigateToInventory(inventory.Id)">
                                                <td>
                                                    @if (!string.IsNullOrEmpty(inventory.ImageUrl))
                                                    {
                                                        <img src="@inventory.ImageUrl" alt="@inventory.Title"
                                                             class="inventory-image-medium" />
                                                    }
                                                    else
                                                    {
                                                        <div class="inventory-image-placeholder-medium">
                                                            <i class="bi bi-box text-muted"></i>
                                                        </div>
                                                    }
                                                </td>
                                                <td>
                                                    <strong>@inventory.Title</strong>
                                                    @if (!string.IsNullOrEmpty(inventory.Description))
                                                    {
                                                        <br />
                                                        <small class="text-muted">
                                                            @(inventory.Description.Length > 100
                                                                ? inventory.Description.Substring(0, 100) + "..."
                                                                : inventory.Description)
                                                        </small>
                                                    }
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(inventory.CategoryName))
                                                    {
                                                        <span class="badge bg-secondary">@inventory.CategoryName</span>
                                                    }
                                                </td>
                                                <td>@inventory.CreatorUsername</td>
                                                <td>
                                                    <span class="badge bg-primary">@inventory.ItemCount</span>
                                                </td>
                                                <td>
                                                    <small class="text-muted">@inventory.CreatedAt.ToString("MMM dd, yyyy")</small>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    [SupplyParameterFromQuery(Name = "q")]
    public string? searchQuery { get; set; }

    private bool isLoading = true;
    private List<InventoryListItemDto> inventories = new();

    protected override async Task OnInitializedAsync()
    {
        await PerformSearch();
    }

    protected override async Task OnParametersSetAsync()
    {
        await PerformSearch();
    }

    private async Task PerformSearch()
    {
        isLoading = true;
        try
        {
            if (!string.IsNullOrWhiteSpace(searchQuery))
            {
                inventories = await InventoryService.SearchInventoriesAsync(searchQuery);
            }
            else
            {
                inventories = new List<InventoryListItemDto>();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error searching inventories: {ex.Message}");
            inventories = new List<InventoryListItemDto>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToInventory(int id)
    {
        Navigation.NavigateTo($"/inventories/{id}");
    }
}
